{% extends "dataset_base.html.jinja" %}
{% block content %}
<div class="container">
{% for name, dataset in datasets.items() %}
<div class="card">
  <div class="inner scroll-style">
    <img class="center" src="https://seerai.space/images/Logo.svg"></img>
    <h3 class="card-title scroll-style">{{ dataset.alias }}</h3>
    <div class="content scroll-style">
      <div class="text-box text-description">
        <p class="card-text text-description"><b>Description:</b> {{ dataset.description }}</p>
      </div>
      <div class="text-clients">
        <p class="card-text text-clients"><b>Clients:</b> {{ dataset.clients | join(', ') }}</p>
      </div>
      <div class="links">
        <p class="card-text text-clients"><b>Providers:</b>
            <ul>
                {% for provider in dataset.stac.providers %}
                <li><p><a href="{{ provider.url }}">{{ provider.name }}</a> ({{ provider.roles | join(', ') }})</li>
                {% endfor %}
            </ul>
        </p>
      </div>
    </div>
  </div>
</div>
{% endfor %}
</div>
{% endblock content %}