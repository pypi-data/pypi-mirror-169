{% extends "user_base.html.jinja" %}
{% block content %}
<div class="u-container">

<div class="u-card">
  <div class="inner u-scroll-style">
    {% if u.avatar %}
    <img class="u-avatar" src="{{ u.avatar }}"></img>
    {% endif %}
    <h3 class="u-card-title">{{ u.alias }}</h3>
    <div class="u-text-box u-text-description">
        <p class="u-card-text u-text-description"><b>First Name:</b> {{ u.first_name }}</p>
        <p class="u-card-text u-text-description"><b>Middle Name:</b> {{ u.middle_name }}</p>
        <p class="u-card-text u-text-description"><b>Last Name:</b> {{ u.last_name }}</p>
        <p class="u-card-text u-text-description"><b>Pronouns:</b> {{ u.pronouns }}</p>
    </div
  </div>
</div>
{% endblock content %}